# editorconfig.org
# root = false

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{go,py,rb,php}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{.htaccess*,*.scss,*.less,*.ts,*.tsx,*.yml,*.yaml,*.json,*.sh}]
indent_size = 2
indent_style = space

